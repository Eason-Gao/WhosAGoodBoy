<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/margin_medium"
    android:background="@color/backgroundLight">

    <ImageView
        android:id="@+id/dog_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:src="@drawable/ic_dog_1"/>

    <TextView
        android:id="@+id/description_main"
        android:layout_width="@dimen/text_view_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:layout_below="@id/dog_icon"
        android:textSize="@dimen/body_text_size"
        android:layout_centerHorizontal="true"
        android:text="@string/main_description"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/import_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_main"
        android:text="@string/import_from_gallery_button"
        style="@style/PrimaryButton"/>

    <Button
        android:id="@+id/take_photo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/import_button"
        android:text="@string/take_photo_button"
        style="@style/PrimaryButton"/>

</RelativeLayout>